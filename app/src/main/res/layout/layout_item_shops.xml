<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout
        android:background="@drawable/bg_item_shops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shops_shop_name"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/textIcons"
            android:text="Shop Name"/>
        <TextView
            android:id="@+id/tv_shops_address"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/textIcons"
            android:fontFamily="@font/open_sans_regular"
            android:text="Shop Address"/>
        <LinearLayout
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "/>
            <TextView
                android:id="@+id/tv_shops_price"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"/>
            <TextView
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price type: "/>
            <TextView
                android:id="@+id/tv_shops_price_type"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per Hour"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_shops_opening"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opening"/>
            <TextView
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>
            <TextView
                android:id="@+id/tv_shops_closing"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closing"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_shops_start_day"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Day"/>
            <TextView
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>
            <TextView
                android:id="@+id/tv_shops_end_day"
                android:textSize="18sp"
                android:textColor="@color/textIcons"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Day"/>

        </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>